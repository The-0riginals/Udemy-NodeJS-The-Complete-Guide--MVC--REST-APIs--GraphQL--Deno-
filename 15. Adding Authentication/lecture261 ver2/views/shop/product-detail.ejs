<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>

    </body>
        <%- include('../includes/navigation.ejs')%>
        <main class="centered">
            <h1><%= product.title %></h1>
            <hr>
            <div class="image">
                <img width="30%" src="<%= product.imageUrl %>" alt="<%= product.title %>">
            </div>
            <h2>$<%= product.price %></h2>
            <p><%= product.description %></p>
            <% if (isAuthenticated) { %>
                <%- include('../includes/add-to-cart.ejs', {product: product}) %>
            <% } %>
            <!-- This is the only difference between this file and the product-list.ejs file,  because we are not looping through products, we don't need to pass in the product object. -->
        </main>
        <%- include('../includes/end.ejs')%>

